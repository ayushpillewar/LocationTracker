{
  "expo": {
    "name": "LocationTracker",
    "slug": "locationtracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "locationtracker",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "privacy": "public",
    "platforms": ["ios", "android"],
    "description": "A parental control app that automatically sends location updates to emergency contacts via SMS",
    "keywords": ["location", "tracking", "parental control", "emergency", "sms", "safety"],
    "ios": {
      "bundleIdentifier": "com.ayushpillewar.locationtracker",
      "buildNumber": "1",
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs location access to send location updates to emergency contacts.",
        "NSLocationWhenInUseUsageDescription": "This app needs location access to send location updates to emergency contacts.",
        "NSContactsUsageDescription": "This app needs access to contacts to select emergency contacts.",
        "UIBackgroundModes": ["location", "background-fetch", "background-processing"]
      }
    },
    "android": {
      "package": "com.ayushpillewar.locationtracker",
      "versionCode": 1,
      "compileSdkVersion": 34,
      "targetSdkVersion": 34,
      "buildToolsVersion": "34.0.0",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "READ_CONTACTS",
        "SEND_SMS",
        "FOREGROUND_SERVICE",
        "WAKE_LOCK"
      ],
      "blockedPermissions": [
        "SYSTEM_ALERT_WINDOW"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow LocationTracker to use your location to send updates to emergency contacts.",
          "locationAlwaysPermission": "Allow LocationTracker to use your location in the background to send automatic updates to emergency contacts.",
          "locationWhenInUsePermission": "Allow LocationTracker to use your location when the app is in use.",
          "isIosBackgroundLocationEnabled": true,
          "isAndroidBackgroundLocationEnabled": true
        }
      ],
      "expo-task-manager",
      [
        "expo-contacts",
        {
          "contactsPermission": "Allow LocationTracker to access your contacts to select emergency contacts."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
